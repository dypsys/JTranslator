{% extends "index.twig" %}

{% block title %}<h1 class="page-title">Users</h1>{% endblock %}

{% block toolbar %}
    <a class="btn btn-primary" href="{{ uri.base.path }}adduser"><i class="icon-plus"></i> {{ "Add User"|_ }}</a>
    {{ parent() }}
{% endblock %}

{% block content %}
    <table class="table table-bordered table-hover">
        <tr>
            <th>{{ "Username"|_ }}</th>
            <th>{{ "ID"|_ }}</th>
        </tr>
        {% for u in items %}
            <tr>
                <td><a href="{{ uri.base.path }}user/{{ u.id }}">{{ u.username }}</a></td>

                <td>{{ u.id }}</td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}